{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "./lib",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "declaration": true,
        "moduleResolution": "node",
        "noEmit": false,
        "baseUrl": "./src/datepicker"
    },
    "include": ["src/datepicker"],
    "exclude": ["node_modules", "src/dev", "src/datepicker/__tests__"]
}
